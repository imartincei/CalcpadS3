# Cloudflare Tunnel Configuration
# Set to "true" to enable Cloudflare tunnel
CLOUDFLARE_TUNNEL_ENABLED=false

# Cloudflare tunnel token (get from Cloudflare Zero Trust dashboard)
CLOUDFLARE_TUNNEL_TOKEN=your_tunnel_token_here

# Optional: Custom tunnel name
CLOUDFLARE_TUNNEL_NAME=calcpad-tunnel

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0

# Frontend Configuration  
FRONTEND_PORT=8080
FRONTEND_HOST=0.0.0.0

# MinIO Configuration
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin123
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Database Configuration
DB_PATH=/data/calcpad.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRY_HOURS=24
JWT_ISSUER=CalcpadServer
JWT_AUDIENCE=CalcpadClient

# MinIO Bucket Configuration
MINIO_WORKING_BUCKET=calcpad-storage-working
MINIO_STABLE_BUCKET=calcpad-storage-stable